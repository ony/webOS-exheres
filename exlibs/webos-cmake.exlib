require webos-env cmake [ api=2 ]

DEPENDENCIES="
    build:
        webOS/cmake-modules-webos
"

MYOPTIONS="doc"
CMAKE_SRC_CONFIGURE_OPTIONS+=(
    "doc WEBOS_CONFIG_BUILD_DOCS:BOOL=TRUE WEBOS_CONFIG_BUILD_DOCS:BOOL=FALSE"
)

CMAKE_SRC_CONFIGURE_TESTS+=(
    "-DWEBOS_CONFIG_BUILD_TESTS:BOOL=TRUE -DWEBOS_CONFIG_BUILD_TESTS:BOOL=FALSE"
)

